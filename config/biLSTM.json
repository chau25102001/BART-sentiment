{
    "name": "biLSTM",
    "n_gpu": 1,
    "save_dir": "./saved/",
    "epoch": 20,
    "freeze_backbone": false,
    "max_seq_length": 128,
    "#comment": "pretrained = None -> null",
    "arch": {
      "type": "LSTMSentimentAnalysis",
      "kwargs": {
        "vocab_size": 74455,
        "embedding_size": 1024,
        "hidden_size": 1024,
        "output_size": 2,
        "num_layers": 3,
        "dropout": 0.2,
        "bi": true,
        "last_state": true,
        "padding_idx": 0
      }
    },
    "train_set": {
      "type": "NaiveTokenizedDataset",
      "kwargs": {
        "csv_path": "./datasets/train_clean.csv",
        "vocabulary_path": "./datasets/train_clean_vocabulary.json",
        "max_seq_length": 128
      }
    },
    "test_set": {
      "type": "NaiveTokenizedDataset",
      "kwargs": {
        "csv_path": "./datasets/test_clean.csv",
        "vocabulary_path": "./datasets/train_clean_vocabulary.json",
        "max_seq_length": 128
      }
    },
    "train_loader": {
      "type": "DataLoader",
      "kwargs": {
        "batch_size": 64,
        "shuffle": true
      }
    },
    "test_loader": {
      "type": "DataLoader",
      "kwargs": {
        "batch_size": 64,
        "shuffle": false
      }
    },
    "#comment1": "losses are defined in loss.py file",
    "criterion": {
      "type": "cross_entropy",
      "kwargs": {}
    },
    "optimizer": {
      "type": "AdamW",
      "kwargs": {
        "lr": 1e-4
      }
    },
    "lr_scheduler": "linear_warm_up"
  }
